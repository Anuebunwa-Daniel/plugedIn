    <script>
        // Show/hide professional fields based on user type selection
        document.querySelectorAll('input[name="userType"]').forEach(radio => {
            radio.addEventListener('change', function() {
                const proFields = document.getElementById('proFields');
                if (this.value === 'pro' || this.value === 'both') {
                    proFields.style.display = 'block';
                } else {
                    proFields.style.display = 'none';
                }
            });
        });
        
        // Embedded form submission
        document.getElementById('embeddedWaitlistForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // In a real app, you would send this data to your server
            // For this demo, we'll simulate a successful submission
            
            // Show confirmation modal
            document.getElementById('confirmationModal').style.display = 'flex';
            
            // Increment waitlist counter
            const counter = document.getElementById('waitlistCount');
            let count = parseInt(counter.textContent.replace(/,/g, ''));
            count += 1;
            counter.textContent = count.toLocaleString();
            
            // Reset form
            this.reset();
            document.getElementById('proFields').style.display = 'none';
        });
        
        // Close confirmation modal
        function closeConfirmation() {
            document.getElementById('confirmationModal').style.display = 'none';
        }
        
        // Close modal when clicking outside
        document.getElementById('confirmationModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeConfirmation();
            }
        });
        
        // Animated counter on page load
        document.addEventListener('DOMContentLoaded', function() {
            // Simulate counting up on page load
            const counter = document.getElementById('waitlistCount');
            const finalCount = 1847;
            let currentCount = 1700;
            const increment = Math.ceil((finalCount - currentCount) / 30);
            
            const interval = setInterval(() => {
                currentCount += increment;
                if (currentCount >= finalCount) {
                    currentCount = finalCount;
                    clearInterval(interval);
                }
                counter.textContent = currentCount.toLocaleString();
            }, 50);
        });
        
        // Update Google Form link with a placeholder
        // In a real implementation, replace with your actual Google Form URL
        document.getElementById('google-form').addEventListener('click', function(e) {
            // If you're using a placeholder URL, you might want to:
            // 1. Replace with your actual Google Form URL
            // 2. Or show a message if you're in demo mode
            if (this.getAttribute('href') === 'https://forms.gle/example') {
                e.preventDefault();
                alert('In a real implementation, this would link to your actual Google Form. Replace the href attribute with your form URL.');
            }
        });
    </script>
